{{- if eq .chezmoi.os "linux" -}}
#!/bin/bash
echo "Installing System Packages (Apt)..."
sudo apt update

# Install HashiCorp GPG key and repo for terraform-ls
sudo apt install -y wget gpg lsb-release
wget -O- https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg --yes
echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/hashicorp.list
sudo apt update

sudo apt install snapd golang-go cmake nodejs tmux terraform-ls -y --allow-change-held-packages


{{- end }}
