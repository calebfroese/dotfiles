{{- if eq .chezmoi.os "darwin" -}}
#!/bin/zsh

# Install opencode on macOS
if ! command -v opencode &> /dev/null; then
    echo "Installing opencode for macOS..."
    curl -fsSL https://opencode.ai/install | bash
fi

{{- end }}
